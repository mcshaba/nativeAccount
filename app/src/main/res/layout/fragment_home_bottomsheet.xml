<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="28dp"
    android:layout_height="match_parent">


    <RelativeLayout

        android:id="@+id/save_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp">


        <ImageView
            android:id="@+id/triangleImageView"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/ic_triangle" />

        <TextView
            android:id="@+id/savedTextView"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/triangleImageView"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@id/triangleImageView"
            android:text="@string/saved" />

        <TextView
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/savedTextView"
            android:layout_alignStart="@id/savedTextView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:text="@string/saved_info" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/pending_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp">


        <ImageView
            android:id="@+id/pendingImageView"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/ic_rectangle" />

        <TextView
            android:id="@+id/pendingTextView"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/pendingImageView"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@id/pendingImageView"
            android:text="@string/pending" />

        <TextView
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pendingTextView"
            android:layout_alignStart="@id/pendingTextView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:text="@string/pending_info" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/completed_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp">


        <ImageView
            android:id="@+id/completedImageView"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/ic_oval" />

        <TextView
            android:id="@+id/completedTextView"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/completedImageView"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@id/completedImageView"
            android:text="@string/completed" />

        <TextView
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/completedTextView"
            android:layout_alignStart="@id/completedTextView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:text="@string/completed_info" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rejected_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp">


        <ImageView
            android:id="@+id/rejectedImageView"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/ic_rectangle_pink" />

        <TextView
            android:id="@+id/rejectedTextView"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/rejectedImageView"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@id/rejectedImageView"
            android:text="@string/rejected" />

        <TextView
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rejectedTextView"
            android:layout_alignStart="@id/rejectedTextView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:text="@string/rejected_info" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clear_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="28dp">


        <ImageView
            android:id="@+id/clearImageView"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/ic_clear_all_black_24dp" />

        <TextView
            android:id="@+id/clearTextView"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/clearImageView"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@id/clearImageView"
            android:text="All" />

        <TextView
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/clearTextView"
            android:layout_alignStart="@id/clearTextView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:text="Tap this to view all accounts that youv'e created" />
    </RelativeLayout>
</LinearLayout>